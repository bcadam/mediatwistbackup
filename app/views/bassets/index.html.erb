<div class="row">

    <% for basset in @bassets %> 
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="<%= basset.image %>" alt="">
            <div class="caption">

                <h3><%= link_to basset.name, basset %></h3>
                <p></p>
                <a href="<%= "/bassets/" + basset.id %>" class="btn btn-primary">View</a>
                </p>
            </div>
        </div>
    </div>
    <%end%>

</div>