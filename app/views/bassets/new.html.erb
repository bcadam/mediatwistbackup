<div class="row">

<div class="col-lg-12">

<h1>Add site</h1>  
  
<%= form_for @basset do |f| %>  
  <% if @basset.errors.any? %>  
    <div class="error_messages">  
      <h2>Form is invalid</h2>  
      <ul>  
        <% for message in @basset.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>  
  <p>  
    <%= f.label :name %><br />  
    <%= f.text_field :name %>  
  </p>  
<%#= f.hidden_field :siteid, :value => @site.id %>

  <p>  
    <%= f.label :Image %><br /> 
    <%= f.file_field :image %>  
  </p> 
  <%= f.submit :class => "btn btn-success btn-lg" %> 
<% end %>

</div>
</div>