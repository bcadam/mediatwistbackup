<div class="row">
    <% for site in @sites %> 
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="thumbnail">
            <img src="<%= site.image %>" alt="">
            <div class="caption">

                <h3><%= link_to site.title , site %></h3>
                <p><%= site.body %></p>
                <p></p>
                <a href="<%= "/sites/" + site.id %>" class="btn btn-primary">View</a>
                </p>
            </div>
        </div>
    </div>
    <%end%>

</div>