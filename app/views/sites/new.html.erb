
            <div class="row">
                <div class="col-lg-12">

 <h1>Add site</h1>  
  
<%= form_for @site do |f| %>  
  <% if @site.errors.any? %>  
    <div class="error_messages">  
      <h2>Form is invalid</h2>  
      <ul>  
        <% for message in @site.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>  
  <p>  
    <%= f.label :Title %><br />  
    <%= f.text_field :title %>  
  </p>  
  <p>  
    <%= f.label :WebsiteURL %><br />  
    <%= f.text_field :url %>  
  </p>  
  <p>  
    <%= f.label :Body %><br /> 
    <%= f.text_field :body %>  
  </p>  
  <%= f.submit :class => "btn btn-success btn-lg" %> 
<% end %>                  </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
     
   
 
